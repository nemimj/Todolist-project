<%- include('header') -%>
    <div class="box">
        <h1>
            <%=title%>
        </h1>
    </div>
    <div class="box">
        <% newItems.forEach((element)=>{ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" onchange=this.form.submit() name="checkbox" value="<%=element._id%>">
                    <p>
                        <%=element.item%>
                    </p>
                </div>
              
            </form>
            <% }) %>
                <form action="/" method="post" class="item">
                    <input type="text" name="newItem" placeholder="addItem" autocomplete="off">
                    <button type="submit" name="button" value="title of the form">+</button>
                </form>
    </div>
    <%- include('footer') -%>